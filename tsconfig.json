{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esNext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@api": [
                "src/api"
            ],
            "@assets": [
                "src/assets"
            ],
            "@modules": [
                "src/modules"
            ],
            "@pages": [
                "src/pages"
            ],
            "@ui": [
                "src/ui"
            ],
            "@utils": [
                "src/utils"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}